---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Oncendayo: Help Has Come",
  description = "Faith-rooted, community-driven support bringing hope, dignity, and practical care to vulnerable families.",
} = Astro.props;

const canonical = new URL(Astro.url.pathname, Astro.site);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="Oncendayo: Help Has Come" />
    <meta name="twitter:card" content="summary" />
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
    <script>
      const emailNodes = document.querySelectorAll("[data-email-user][data-email-domain]");
      emailNodes.forEach((node) => {
        const user = node.getAttribute("data-email-user");
        const domain = node.getAttribute("data-email-domain");
        const subject = node.getAttribute("data-email-subject");
        const address = `${user}@${domain}`;
        const href = subject
          ? `mailto:${address}?subject=${encodeURIComponent(subject)}`
          : `mailto:${address}`;
        const link = document.createElement("a");
        link.href = href;
        link.textContent = address;
        if (node.dataset.emailLabel) {
          link.textContent = node.dataset.emailLabel;
        }
        node.replaceWith(link);
      });

      const mailtoForms = document.querySelectorAll("form[data-mailto-user][data-mailto-domain]");
      mailtoForms.forEach((form) => {
        const user = form.getAttribute("data-mailto-user");
        const domain = form.getAttribute("data-mailto-domain");
        form.setAttribute("action", `mailto:${user}@${domain}`);
      });
    </script>
  </body>
</html>
